# GitHub Configuration
GITHUB_TOKEN=ghp_your_personal_access_token_here
GITHUB_ORG=your-org-name

# LLM Provider (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4000

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///overlord.db

# Features
DRY_RUN=false
ENABLE_BLAST_RADIUS_ANALYSIS=true
BLAST_RADIUS_CONFIDENCE_THRESHOLD=0.7

# Blast Radius Analysis
GRAPH_CACHE_DIR=./cache/graphs
GRAPH_MAX_NODES=50000
GRAPH_MAX_DEPTH=5
CODE_ANALYSIS_TIMEOUT_SEC=300

# Story Configuration
STORY_MIN_AC_COUNT=2
STORY_MAX_AC_COUNT=7

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Repository Paths (optional - for local code analysis)
# Format: REPO_PATHS={"owner/repo1": "/path/to/repo1", "owner/repo2": "/path/to/repo2"}
# REPO_PATHS={}